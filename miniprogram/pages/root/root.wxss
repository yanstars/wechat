page {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        to right,
        rgba(88, 97, 224, 1),
        rgba(103, 182, 225, 1)
    );
}
.index {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.wrap {
    margin: 0 auto;
    width: 70%;
    height: 80%;
    background-color: #fff;
    padding: 2rem 2rem;
    border-radius: 1rem;
    /* overflow: auto; */
}
.file {
    box-sizing: border-box;
    margin: 2rem 0;
    width: 100%;
    height: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1rpx solid #eee;
}
.word-file {
    width: 3.5rem;
    margin-top: 0.5rem;
}
.png-file {
    width: 3.5rem;
    height: 3.5rem;
}
.fontcenter {
    font-size: 0.75rem;
    color: #8e8e8e;
    text-align: center;
    line-height: 1.25rem;
}
.font {
    font-size: 0.75rem;
    color: #8e8e8e;
    line-height: 24px;
}
.header {
    border-bottom: 1px solid #eee;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
}

.item {
    width: 100%;
    font-size: 0.75rem;
    color: #8e8e8e;
    line-height: 1.5rem;
}

.colclass {
    text-align: center;
}

.itemFirst {
    color: #000;
    border-bottom: 2rpx solid #c7c2c2;
    margin-top: 0.5rem;
}
/* 获得焦点 */
.inputFoucs {
    border-bottom: 1px solid rgba(88, 97, 224, 1);
    color: rgba(88, 97, 224, 1);
}


.inputDafult {
    font-size: 0.75rem;
    /* width: 80px; */
    text-align: center;
    padding: 0;
    margin: 0;
}
