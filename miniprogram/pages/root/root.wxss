/**index.wxss**/

page {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        to right,
        rgba(88, 97, 224, 1),
        rgba(103, 182, 225, 1)
    );
}

.index {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.wrap {
    margin: 0 auto;
    width: 70%;
    height: 80%;
    background-color: #fff;
    padding: 0.75rem 2rem;
    border-radius: 1rem;
}

.file {
    width: 100%;
    height: 3rem;
    display: flex;
    flex-direction: row;
}
.file-l {
    flex-wrap: nowrap;
    line-height: 3rem;
    flex: 1;
    
}
.filename {
    flex-wrap: nowrap;
    flex: 1;
    
}
