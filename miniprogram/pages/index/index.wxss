/**index.wxss**/
page {
    background: #e8ecf0;
    width: 95%;
    height: 100%;
    margin: 0 auto;
}

.index {
    width: 100%;
    padding-top: 1rem;
}

.head {
    box-shadow: 0 0 20rpx #888888;
}

.content {
    background-color: white;
    margin: 0 auto;
    margin-top: 0.75rem;
    border-radius: 10rpx;
    padding: 0 20rpx;
    padding-top: 0.5rem;
    box-shadow: 0 0 20rpx #888888;
    overflow: hidden;
}

.conTitle {
    padding-bottom: 0.75rem;
    border-bottom: 2rpx solid #a3a2a2;
    margin-bottom: 0.75rem;
}

.eye {
    font-size: 0.75rem;
    color: rgb(1, 238, 238);
    line-height: 1.5rem;
}

.item {
    width: 100%;
    height: 1.5rem;
    margin-bottom: 10rpx;
    font-size: 0.75rem;
    color: #8e8e8e;
    line-height: 1.5rem;
}

#itemFirst {
    font-size: 0.8rem;
    color: rgb(51, 50, 50);
}

.item-children {
    width: 30%;
    height: 1.5rem;
    background-color: blue;
}

#Suggest {
    height: 5rem;
}
.noData {
    background-color: white;
    width: 100%;
    height: 30rem;
    margin-top: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
}
