/**index.wxss**/

page {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        to right,
        rgba(88, 97, 224, 1),
        rgba(103, 182, 225, 1)
    );
}

.index {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.wrap {
    margin: 0 auto;
    width: 70%;
    background-color: #fff;
    padding: 0.75rem 2rem;
    border-radius: 1rem;
}

.title {
    width: 100%;
    text-align: center;
}

.center:first-child {
    font-weight: 600;
    letter-spacing: 2px;
}

.center:last-child {
    font-size: 16rpx;
    color: #8e8e8e;
}

.img-content {
    width: 100%;
    height: 8rem;
    border-radius: 0.75rem;
}

.imglogo {
    width: 4rem;
    height: 4rem;
}
.queryBtn {
    height: 30px;
    min-width: 60px;
    font-size: 12px;
    line-height: 28px;
    border: 1px solid #f3eded;
}

.logo {
    margin: 0 auto;
    width: 5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    border-radius: 50%;
}

.inputCom {
    border: 1px solid #eee;

    border-radius: 0.5rem;
    margin-top: 20%;
    padding: 10rpx;
    padding-left: 25rpx;
    display: flex;
    background-color: #fff;
}

.input {
    position: relative;
    display: block;
    width: 100%;
    min-height: 30.4px;
    padding: 0;
    margin: 0;
    line-height: inherit;
    color: #8e8e8e;
    text-align: left;
    background-color: initial;
    border: 0;
    box-sizing: border-box;
}

.closeIcon {
    position: relative;
    top: 10rpx;
    left: -10rpx;
    opacity: 0.5;
}

.bot-addr {
    text-align: center;
    font-size: 0.7rem;
    color: #8e8e8e;
    margin-bottom: 3%;
    margin-top: 2%;
}

.bot-tel {
    text-align: center;
    font-size: 0.8rem;
    color: #8e8e8e;
}

.imgCard {
    margin-top: 0.75rem;
}
