/**index.wxss**/

page {
    background: #e8ecf0;
    width: 95%;
    margin: 0 auto;
    padding: 0;
}
.index {
    width: 100%;
    height: 100%;
    padding-top: 0.5rem;
}
.inputCom {
    box-shadow: 0 0 20rpx #888888;
}
.inputCom {
    display: flex;
    background-color: #fff;
    padding: 0.75rem;
}
.input {
    position: relative;
    font-size: 0.9rem;
    display: block;
    width: 100%;
    height: 24px;
    min-height: 30.4px;
    padding: 0;
    margin: 0;
    line-height: inherit;
    color: #333;
    text-align: left;
    background-color: initial;
    border: 0;
    box-sizing: border-box;
    resize: none;
}
.closeIcon {
    position: relative;
    top: 10rpx;
    left: -10rpx;
    opacity: 0.5;
}
.toRoot {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
    line-height: 5rem;
    background-color: #07c160;
    color: #fff;
    box-shadow: 0 0 20rpx #888888;
}
.content {
    background-color: white;
    margin: 0 auto;
    margin-top: 0.75rem;
    border-radius: 10rpx;
    padding: 0 20rpx;
    padding-top: 0.5rem;
    box-shadow: 0 0 20rpx #888888;
}

.conTitle {
    padding-bottom: 0.75rem;
    border-bottom: 2rpx solid #c7c2c2;
    margin-bottom: 0.5rem;
}

.eye {
    font-size: 0.75rem;
    color: rgb(1, 238, 238);
    line-height: 1.5rem;
    text-align: center;
}
.colclass {
    text-align: center;
}

.item {
    width: 100%;
    height: 1.5rem;
    margin-bottom: 10rpx;
    font-size: 0.75rem;
    color: #8e8e8e;
    line-height: 1.5rem;
}

.item-children {
    width: 30%;
    height: 1.5rem;
    background-color: blue;
}

.noData {
    background-color: white;
    width: 100%;
    height: 1044rpx;
    margin-top: 0.75rem;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 0 20rpx #888888;
}

#itemFirst {
    font-size: 0.8rem;
    color: rgb(51, 50, 50);
}

#Suggest {
    height: 5rem;
}
.prompt {
    color: #8e8e8e;
    font-size: 0.75rem;
    text-align: center;
    width: 2rem;
    height: 2rem;
    margin: 0 auto;
    position: relative;
    top: 20rpx;
    line-height: 2rem;
    background-color: #fff;
    box-shadow: 0 0 20rpx #888888;
    border-radius: 50%;
}
